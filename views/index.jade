extend layout

block content
  div(ng-controller='MainCtrl as ctrl')
    ul
      li(ng-repeat='post in posts track by post._id')
        h4
          a(ng-href='{{post.link}}', target='_blank') {{post.title}}
        .subheader
          {{post.time}} &mdash; {{post.source}} &mdash;#{' '}
          a(ng-href='{{post.comment_link', target='_blank') {{post.comment_count}} Comments
        hr
